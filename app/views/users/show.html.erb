<h1 class="profile-username"><%=@user.username %></h1>

<%= gravatar_for @user, size: 200, class: 'profile-image' %>

<div class="gc-button-group">
  <%= button_to "Edit profile", { action: "edit", id: @user.id }, { method: :get, class: 'gc-button' } %>
  <%= button_to "Delete", { action: "destroy", id: @user.id }, { method: :delete, class: 'gc-button secondary' } %>
</div>

<h3 class="profile-username">Articles</h3>

<%= render 'articles/article' %>

<%= will_paginate @articles %>


