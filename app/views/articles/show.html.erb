
<div class="article-card">
  <p class="article-card-id">#<%=@article.id %></p>
  <p class="article-card-title"> <b>Article title:</b> <%= @article.title %></p>
  <p class="article-card-description"> <b>Article description:</b> <%= @article.description %></p>
</div>

<div class="gc-button-group">
  <%= button_to "Show", { action: "show", id: @article.id }, { method: :get, class: 'gc-button' } %>
  <%= button_to "Delete", { action: "destroy", id: @article.id }, { method: :delete, class: 'gc-button', data: { confirm: 'Are you sure?' } } %>
  <%= button_to "Edit", { action: "edit", id: @article.id }, { method: :get, class: 'gc-button' } %>
</div>
<%= link_to "Back to articles", articles_path  %>
