
<div class="article-card">
  <p class="article-card-id">#<%=@article.id %></p>
  <p class="article-card-title"> <b>Article title:</b> <%= @article.title %></p>
  <p class="article-card-description"> <b>Article description:</b> <%= @article.description %></p>
  <div class="article-card-username"> <div>by <%= link_to @article.user.username, @article.user  %></div> </div>
</div>

<div class="gc-button-group">
  <% if logged_in? && @article.user == current_user %>
    <%= button_to "Delete", article_path(@article), { method: :delete, class: 'gc-button', data: { confirm: 'Are you sure?' } } %>
    <%= button_to "Edit", edit_article_path(@article), { method: :get, class: 'gc-button' } %>
  <% end %>
</div>
<div class="gc-button-group">
  <%= link_to "Back to articles", articles_path  %>
</div>
